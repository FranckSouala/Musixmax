<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Musixmax.CustomControls.AlbumsItempage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Name="this">





    <StackLayout BindingContext="{x:Reference this}" Margin="10,10">
        <Image Source="{Binding AlbumCoverImage}" Aspect="AspectFit" xct:CornerRadiusEffect.CornerRadius="20"/>

        <Label Text="{Binding AlbumName}" Style="{StaticResource AlbumPrimaryLabelStyle}"
               HorizontalOptions="Center" VerticalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding AlbumArtist}" Style="{StaticResource AlbumSecondaryLabelStyle}"/>
                        <Span Text=" |" Style="{StaticResource SecondaryLabelStyle}"/>
                        <Span Text=" "/>
                        <Span Text="{Binding NumberOfTracks}" Style="{StaticResource AlbumSecondaryLabelStyle}"/>
                        <Span Text=" morceaux" Style="{StaticResource AlbumSecondaryLabelStyle}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            </StackLayout>
        </StackLayout>
        
    
</ContentView>